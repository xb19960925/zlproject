<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_page_samrt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomePageFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.youth.banner.Banner
            android:id="@+id/home_page_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            app:layout_constraintTop_toTopOf="parent"
            />
        <View
            android:id="@+id/home_page_line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/home_page_banner"/>
        <com.example.zhulong.design.BottmTab
            android:id="@+id/bottom_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            app:tabNum="5"
            app:selectedColor="@color/color1b"
            app:layout_constraintTop_toBottomOf="@id/home_page_line1"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hone_live_card_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            app:layout_constraintTop_toBottomOf="@id/bottom_tab">
            <View
                android:id="@+id/live_first_cut_line"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_15"
                android:layout_margin="@dimen/dp_10"
                android:background="@color/red423a"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tv_home_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:text="直播专区"
                app:layout_constraintLeft_toRightOf="@id/live_first_cut_line"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/tv_live_home_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/iv_home_live_photo"
                android:text="全部直播"/>
            <ImageView
                android:id="@+id/iv_home_live_photo"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/ic_arrow_right_gray"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_page_live_broadcast_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                app:layout_constraintTop_toBottomOf="@id/tv_home_live"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/home_page_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/hone_live_card_layout"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_page_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/home_page_line"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.scwang.smartrefresh.layout.SmartRefreshLayout>